{
  "format_version": 2,

  "DATASET_ROOT": "/tmp/cifar10_data",

  "executors": [
    {
      "tasks": [
        "train", "submit_model", "validate"
      ],
      "executor": {
        "id": "Executor",
        "path": "nvflare.app_common.executors.virtual_learner_executor.VirtualLearnerExecutor",
        "args": {
          "learner_id": "cifar10-learner",
          "n_real_clients": 8,
          "n_virtual_clients": 2,
          "release_model_an_optim": true
        }
      }
    }
  ],

  "task_result_filters": [
  ],
  "task_data_filters": [
  ],

  "components": [
    {
      "id": "cifar10-learner",
      "path": "pt.learners.cifar10_learner.CIFAR10Learner",
      "args": {
        "dataset_root": "{DATASET_ROOT}",
        "aggregation_epochs": 4,
        "lr": 1e-3
      }
    }
  ]
}
